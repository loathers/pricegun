generator client {
  provider        = "prisma-client"
  previewFeatures = ["typedSql"]
  output          = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleSource {
  mall
  flea
}

model Sale {
  source    SaleSource
  buyerId   Int
  sellerId  Int
  itemId    Int
  quantity  Int
  unitPrice Decimal
  date      DateTime
  item      Item       @relation(fields: [itemId], references: [itemId])

  @@id([source, buyerId, sellerId, itemId, date])
}

model Item {
  value  Decimal
  volume Int
  date   DateTime
  itemId Int      @id
  name   String?
  image  String   @default("nopic.gif")
  sales  Sale[]
}
