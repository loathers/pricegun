generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleSource {
  mall
  flea
}

model Sale {
  source    SaleSource
  buyerId   Int
  sellerId  Int
  itemId    Int
  quantity  Int
  unitPrice Int
  date      DateTime

  @@id([source, buyerId, sellerId, itemId, date])
}

model Price {
  value  Int
  volume Int
  date   DateTime
  itemId Int      @id
}
